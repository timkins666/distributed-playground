{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Go Containerized Debug",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 4000,
            "host": "127.0.0.1",
            "substitutePath": [
                {
                    "from": "${workspaceFolder}/services/auth-service",
                    "to": "/app" // Map the local workspace folder to the container path
                }
            ]
        }
    ]
}